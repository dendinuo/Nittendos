<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="org.MybatisStudy" >
	<select id="getUserCount" resultType="Integer">
		select count(*) from userinfo;
	</select>
	
	<insert id="addUser" parameterType="org.MybatisStudy.model.User">
		insert into userinfo(userid,username,psw,money)
		values ( #{userid},#{username},#{psw},#{money});
	</insert>
	
	<update id="updateUser" parameterType="org.MybatisStudy.model.User">
		update userinfo set money=#{money} where userid=#{userid};
	</update>
	
	<delete id="deleteUser" parameterType="Integer">
		delete from userinfo where userid=#{userid};
	</delete>
	
</mapper>	